@model SnakeBattleNet.FE.Models.Account.ChangePasswordModel
<div class="row">
    <div class="span12">
        @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-block alert-error" })
    </div>
    <div class="offset3 span6">
        <div class="well">
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <fieldset>
                    <legend>Change Password</legend>
                    <div class="control-group">
                        <div class="control-label">
                            @Html.LabelFor(m => m.CurrentPassword)
                        </div>
                        <div class="controls">
                            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "required" })
                            @Html.ValidationMessageFor(m => m.CurrentPassword)
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="control-label">
                            @Html.LabelFor(m => m.NewPassword)
                        </div>
                        <div class="controls">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "required" })
                            @Html.ValidationMessageFor(m => m.NewPassword)
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="control-label">
                            @Html.LabelFor(m => m.ConfirmPassword)
                        </div>
                        <div class="controls">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "required" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>
                    <div class="form-actions">
                        <input type="submit" value="Change Password" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-primary" })
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
@section ScriptSection
{
    <script src="@Url.Content("~/Scripts/lib/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/lib/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}