<div class="span6 offset3">
    <div class="row">
        <div class="well">
            <form class="form-horizontal">
                <fieldset>
                    <legend>Edit Snake {{snake.snakeName}}</legend>
                    <div class="control-group">
                        <div class="control-label">
                            <label>Snake name:</label>
                        </div>
                        <div class="controls">
                            <input type="text" ng-model="snake.snakeName" />
                        </div>
                    </div>
                    <div class="form-actions">
                        <button ng-click="save()" class="btn btn-primary">Save</button>
                        <a href="#!/" class="btn btn-primary">Cancel</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<div class="span8 offset2">
    <div class="well well-large">
        <div c-selector image="elementSelector" ar="elementValue" map="map"></div>
    </div>
</div>
<div ng-repeat="brainModule in snake.brainModules">
    <div class="span4">
        <div class="well">
            <canvas c-draw map="brainModule" val="snake.snakeName" hr="7" wr="7"></canvas>
        </div>
    </div>
</div>
<div class="span4">
    <div class="well">
        <button ng-click="addNew()" class="btn">Add</button>
    </div>
</div>
