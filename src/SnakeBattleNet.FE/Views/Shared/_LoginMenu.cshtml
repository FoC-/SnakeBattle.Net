@model SnakeBattleNet.FE.Models.ProfileViewModel

@if (Request.IsAuthenticated)
{
    var display = "Anonymus";
    if(Model != null)
    {
        display = Model.FirstName + " " + Model.LastName;
    }
    if (display.Length >= 17)
    {
        display = display.Substring(0, 17);
    }
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@display<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
            <li>@Html.ActionLink("Change Password", "ChangePassword", "Account")</li>
            <li>@Html.ActionLink("Log Off", "LogOff", "Account")</li>
        </ul>
    </li>
}
else
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Guest<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Login or Register", "LoginRegister", "Account")</li>
        </ul>
    </li>

}
