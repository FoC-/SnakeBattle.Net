@using SnakeBattleNet.Web.Core.Auth
@model UserIdentity

<div class="row">
    <div class="col-md-8">
        <h4>@Model.UserName</h4>
        <hr />
        <section>
            @using (Html.BeginForm("Delete", "Admin", FormMethod.Post, new { @class = "form-inline", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id)
                <input type="submit" class="btn btn-danger form-inline" value="Delete" />
            }
            @using (Html.BeginForm("Roles", "Admin", FormMethod.Post, new { @class = "form-inline", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    <select multiple class="form-control" name="roles">
                        @foreach (var role in RolesProvider.Roles)
                        {
                            <option @(Model.Roles.Contains(role) ? "selected" : "")>@role</option>
                        }
                    </select>
                </div>
                <input type="submit" class="btn btn-default form-inline" value="Set Roles" />
            }
        </section>
    </div>
</div>
